    { "path": "../compose-tunnel-agent" },
    { "path": "../common" },
    { "path": "../cli-common" },
    { "path": "../driver-lightsail" },
    { "path": "../driver-gce" },
    { "path": "../driver-azure" },
    { "path": "../driver-kube-pod" },
    { "path": "../plugin-github" }
